<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Inicio de Sesión" FontWeight="Bold" FontSize="20" Margin="0 0 0 20"/>
            <Label Content="Nombre de Usuario:"/>
            <TextBox x:Name="UsernameTextBox" Width="200"/>
            <Label Content="Contraseña:"/>
            <PasswordBox x:Name="PasswordBox" Width="200"/>
            <Button Content="Iniciar Sesión" Click="LoginButton_Click" Width="100" Margin="0 20 0 0" Background="Aqua"/>
        </StackPanel>
    </Grid>
</Window>

